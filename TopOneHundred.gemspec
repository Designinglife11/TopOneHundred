require_relative "lib/TopOneHundred/version"

Gem::Specification.new do |spec|
  spec.name          = "TopOneHundred"
  spec.version       = TopOneHundred::VERSION
  spec.authors       = ["Andrew"]
  spec.email         = ["Designinglife11@gmail.com"]

  spec.summary       = "TopOneHundred is a program that allows users to view IMDB's top 100 movie, while allowing them to review details about each movie."
